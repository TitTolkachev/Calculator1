<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F3F6"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="468dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/eight"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/five"
            app:layout_constraintEnd_toStartOf="@+id/nine"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/sign"
            tools:text="8" />

        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:backgroundTintMode="add"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/seven"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/four"
            app:layout_constraintEnd_toStartOf="@+id/eight"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reset"
            tools:text="7" />

        <Button
            android:id="@+id/division"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#3A4E89"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/division"
            android:textColor="#FFFFFF"
            android:textSize="43sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/remainder"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/nine"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/six"
            app:layout_constraintEnd_toStartOf="@+id/multiply"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/remainder"
            tools:text="9" />

        <Button
            android:id="@+id/plus"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#3A4E89"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/plus"
            android:textColor="#FFFFFF"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/equals"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/minus"
            tools:text="+" />

        <Button
            android:id="@+id/zero"
            android:layout_width="175dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/zero"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dot"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/two"
            tools:text="0" />

        <Button
            android:id="@+id/reset"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="sans-serif-medium"
            android:stateListAnimator="@null"
            android:text="@string/clear"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/seven"
            app:layout_constraintEnd_toStartOf="@+id/sign"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/two"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/two"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/zero"
            app:layout_constraintEnd_toStartOf="@+id/three"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/one"
            app:layout_constraintTop_toBottomOf="@+id/five"
            tools:text="2" />

        <Button
            android:id="@+id/remainder"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/remainder"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/nine"
            app:layout_constraintEnd_toStartOf="@+id/division"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sign"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="%" />

        <Button
            android:id="@+id/sign"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/memory"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/eight"
            app:layout_constraintEnd_toStartOf="@+id/remainder"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/reset"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="+/-" />

        <Button
            android:id="@+id/one"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/one"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/zero"
            app:layout_constraintEnd_toStartOf="@+id/two"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four"
            tools:text="1" />

        <Button
            android:id="@+id/dot"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/dot"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/equals"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/zero"
            app:layout_constraintTop_toBottomOf="@+id/three"
            tools:ignore="TextContrastCheck"
            tools:text="," />

        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/five"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/two"
            app:layout_constraintEnd_toStartOf="@+id/six"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/eight"
            tools:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/six"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/three"
            app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            tools:text="6" />

        <Button
            android:id="@+id/equals"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#3A4E89"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/equals"
            android:textColor="#FFFFFF"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dot"
            app:layout_constraintTop_toBottomOf="@+id/plus" />

        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/four"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/one"
            app:layout_constraintEnd_toStartOf="@+id/five"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            tools:text="4" />

        <Button
            android:id="@+id/minus"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#3A4E89"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/minus"
            android:textColor="#FFFFFF"
            android:textSize="45sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/multiply"
            tools:ignore="TextContrastCheck"
            tools:text="-" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#3A4E89"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/multiplication"
            android:textColor="#FFFFFF"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/division" />

        <Button
            android:id="@+id/three"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:backgroundTint="#F1F3F6"
            android:elevation="1dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:stateListAnimator="@null"
            android:text="@string/three"
            android:textColor="#3A4E89"
            android:textSize="29sp"
            android:translationZ="2dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/dot"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/six"
            tools:text="3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/rectangle_2"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:alpha="0.08"
        android:fontFamily="@font/digitalnumbers_regular"
        android:text="@string/text8888"
        android:textAlignment="textEnd"
        android:textColor="#373A37"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:fontFamily="@font/digitalnumbers_regular"
        android:text="@string/mainText"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="@string/calculator"
        android:textColor="#373A37"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>